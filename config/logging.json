{
  "version": 1,
  "disable_existing_loggers": true,
  "loggers": {
    "": {
      "level": "NOTSET",
      "handlers": ["debug_console_handler", "all_rotating_file_handler", "info_rotating_file_handler", "error_file_handler", "critical_mail_handler"]
    },
    "my.package": {
      "level": "WARNING",
      "propagate": false,
      "handlers": ["all_rotating_file_handler", "info_rotating_file_handler", "error_file_handler"]
    }
  },
  "handlers": {
    "debug_console_handler": {
      "level": "DEBUG",
      "formatter": "console",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout"
    },
    "all_rotating_file_handler": {
      "level": "DEBUG",
      "formatter": "file",
      "class": "logging.handlers.RotatingFileHandler",
      "filename": "./logs/all.log",
      "mode": "a",
      "maxBytes": 16777216,
      "backupCount": 10
    },
    "info_rotating_file_handler": {
      "level": "INFO",
      "formatter": "file",
      "class": "logging.handlers.RotatingFileHandler",
      "filename": "./logs/info.log",
      "mode": "a",
      "maxBytes": 16777216,
      "backupCount": 10
    },
    "error_file_handler": {
      "level": "WARNING",
      "formatter": "file",
      "class": "logging.FileHandler",
      "filename": "./logs/error.log",
      "mode": "a"
    },
    "critical_mail_handler": {
      "level": "CRITICAL",
      "formatter": "file",
      "class": "logging.handlers.SMTPHandler",
      "mailhost": "localhost",
      "fromaddr": "monitoring@domain.com",
      "toaddrs": ["dev@domain.com", "qa@domain.com"],
      "subject": "Critical error with application name"
    }
  },
  "formatters": {
    "file": {
      "format": "%(asctime)s|%(levelname)s|%(name)s|%(process)d::%(module)s|%(lineno)s:: %(message)s"
    },
    "console": {
      "format": "%(asctime)s|%(levelname)s|%(name)s::%(module)s|%(lineno)s:: %(message)s"
    }
  }

}